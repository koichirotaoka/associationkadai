<!DOCTYPE html>
<html>
  <head>
    <title>Sample</title>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
    <%= csrf_meta_tags %>
  </head>

  <body>
    <header>
      <div class="container">
        <nav class="navbar navbar-default alert alert-success">
          <div class="container-fluid">
            <div class="navbar-header">
              <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#gnavi">
                <span class="sr-only">Bootstrap</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
              </button>
              <a class="navbar-brand" href="/top/index">TOP</a>
            </div>
            <div id="gnavi" class="collapse navbar-collapse">
              <ul class="nav navbar-nav">
                <li><a href="/blogs/new">新規投稿</a></li>
                <li><a href="/blogs">一覧</a></li>
              </ul>
            </div>
          </div>
        </nav>
      </div>
    </header>
    
    <body>
      <% flash.each do |key, value| %>
        <%= content_tag(:div, value, class: "#{key}") %>
      <% end %>
     
      <% if logged_in? %>
        <%= link_to "マイページ", user_path(current_user.id), class: "btn btn-primary" %>
        <%= link_to "ログアウト", session_path(current_user.id), method: :delete, class: "btn btn-primary"%>
        <%= link_to "ブログ一覧", users_path, class: "btn btn-primary"%>
        <%= link_to "お気に入り一覧", "/users/favorites/#{current_user.id}", class: "btn btn-primary"%>
      <% else %>
        <%= link_to "ユーザー登録", new_user_path, class: "btn btn-primary"%>
        <%= link_to "ログイン", new_session_path, class: "btn btn-primary" %>
      <% end %>

      <%= yield %>
    </body>
  
    <footer class="alert alert-success">
      <p>運営会社DIVE INTO CODE株式会社</p>
      <p>© 2015-2016 Copyright DIVE INTO CODE Corp.</p>
    </footer>
  </body>
</html>
